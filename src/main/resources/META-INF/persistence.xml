<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
      http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="parametersPU" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		
		<class>com.asseco.cas.parameters.domain.ParameterItem</class>
		<class>com.asseco.cas.parameters.domain.ParameterList</class>
		<class>com.asseco.cas.parameters.domain.ApplicationParameterList</class>
		<class>com.asseco.cas.parameters.domain.SystemParameterList</class>

		<properties>
			<!-- Configuring JDBC properties -->
			<property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@db-orcl:1521:orcl" />
			<property name="javax.persistence.jdbc.user" value="sofijamolsp" />
			<property name="javax.persistence.jdbc.password" value="sofija" />
			<property name="javax.persistence.jdbc.driver" value="oracle.jdbc.driver.OracleDriver" />

			<property name="eclipselink.weaving.fetchgroups" value="static"/>
			<property name="eclipselink.weaving" value="static" />
			<property name="eclipselink.query-results-cache" value="false" />
			<property name="eclipselink.cache.size.default" value="0" />
			<property name="eclipselink.cache.type.default" value="None" />
			<property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
			<property name="eclipselink.cache.shared.default" value="false"/>


		</properties>
	</persistence-unit>
</persistence>